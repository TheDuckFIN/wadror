<h2><%= @user.username %></h2>

<% if @user.beer_clubs.empty? %>
	<p>Has no beer club memberships!</p>
<% else %>
	<p>
		member of 
		<% @user.beer_clubs.each do |club| %>
			<%= link_to club.name, club %>
		<% end %>
	</p>
<% end %>

<% if @user.ratings.empty? %>
	<p>Has not rated any beers yet!</p>
<% else %>
	<p>
		Favourite beer style: <%= @user.favorite_style.name %><br />
		Favourite brewery: <%= @user.favorite_brewery.name %>
	</p>
	<p>Has rated <%= pluralize(@user.ratings.count, "beer") %>, average <%= @user.average_rating %>

	<h3>Ratings</h3>
	
	<ul>
	<% @user.ratings.each do |rating| %>
		<li>
			<%= rating %> 
			<% if @user == current_user %>
				<%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?'} %>
			<% end %>
		</li>
	<% end %>
	</ul>
<% end %>

<% if @user == current_user %>
	<%= link_to 'Edit info', edit_user_path(@user) %>
	<%= link_to 'Delete account', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
