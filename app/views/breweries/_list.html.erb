<table class="table table-hover">
  <thead>
    <tr>
      <% if @order_nil %>
        <th class="col-md-9"><%= link_to 'Name', breweries_path(order:'name') %></th>
        <th class="col-md-3"><%= link_to 'Year', breweries_path(order:'year') %></th>
      <% else %>
        <th class="col-md-9"><%= link_to 'Name', breweries_path(order:'name', desc:!@desc) %></th>
        <th class="col-md-3"><%= link_to 'Year', breweries_path(order:'year', desc:!@desc) %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
    <% end %>
  </tbody>
</table>